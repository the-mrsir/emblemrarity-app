# Required
BASE_URL=https://emblemrarity.app
BUNGIE_API_KEY=YOUR_KEY
BUNGIE_CLIENT_ID=YOUR_ID
BUNGIE_CLIENT_SECRET=YOUR_SECRET

# Optional admin
ADMIN_KEY=change-me

# Cron (nightly rarity refresh)
CRON_ENABLED=true
REFRESH_CRON=0 3 * * *
CRON_TZ=America/New_York

# Rarity cache TTLs
LIGHTGG_TTL=2592000
LIGHTGG_NULL_TTL=1800
LIGHTGG_RETRY_MS=4000

# Throttle
RARITY_CONCURRENCY=2
RARITY_MIN_GAP_MS=200
